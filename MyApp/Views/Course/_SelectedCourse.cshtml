@model CourseTestViewModel

<br />
<br />
<br />
<h3>Role User Information</h3>
<form class="form form-horizontal" asp-controller="Course" asp-action="CourseEdit" asp-antiforgery="false" method="POST">
	<div class="form-group">
		<div class="col-md-3">
			<label>Course Name:</label>
			<input type="text" class="form-control" asp-for="@Model.Course.CourseName">
			<span asp-validation-for="@Model.Course.CourseName"></span>
		</div>
	</div>
	<div class="form-group">
		<div class="col-md-3">
			<label>Instructor Name:</label>
			<input type="text" class="form-control" asp-for="@Model.Course.Instructor.FullName">
			<span asp-validation-for="@Model.Course.Instructor.FullName"></span>
		</div>
	</div>
	<button type="submit" class="btn btn-primary">Update</button>
</form>