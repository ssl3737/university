@model Book

@{
    ViewData["Title"] = "Edit Book";
}

<!-- Page Header -->
@await Html.PartialAsync("_BookHeader")

<!-- Main Content -->
<div class="col-md">
    <form class="form form-horizontal" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <div class="col-md-3">
                <label asp-for="@Model.Name" class="control-label"></label>
                <input type="text" class="form-control" asp-for="@Model.Name">
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-3">
                <label asp-for="@Model.Author" class="control-label"></label>
                <input type="text" class="form-control" asp-for="@Model.Author">
                <span asp-validation-for="@Model.Author" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-3">
                <label asp-for="@Model.Price" class="control-label"></label> ($)
                <input type="text" class="form-control" asp-for="@Model.Price">
                <span asp-validation-for="@Model.Price" class="text-danger"></span>
            </div>
        </div>
        <button type="submit" class="btn btn-primary" value="Save">Update</button>
    </form>
</div>